{
	"name": "sweetshop-backend",
	"version": "1.0.0",
	"description": "Sweet Shop Management System Backend API",
	"main": "dist/index.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "jest --watchAll=false",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"migrate": "ts-node src/database/migrate.ts"
	},
	"keywords": [
		"sweetshop",
		"api",
		"express"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"express": "^4.18.2",
		"pg": "^8.11.3",
		"bcrypt": "^5.1.1",
		"jsonwebtoken": "^9.0.2",
		"dotenv": "^16.3.1",
		"cors": "^2.8.5",
		"express-validator": "^7.0.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.5",
		"@types/pg": "^8.10.9",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/cors": "^2.8.17",
		"@types/jest": "^29.5.11",
		"@types/supertest": "^6.0.2",
		"typescript": "^5.3.3",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"supertest": "^6.3.3"
	}
